{
  "extends": ["@yuri", "plugin:react/recommended", "plugin:prettier/recommended"],
  "plugins": [
    "react"
  ],
  "rules": {
    "quotes": ["error", "double", {"allowTemplateLiterals": true, "avoidEscape": true }],

    "react/react-in-jsx-scope": "off",
    "react/self-closing-comp": "off",

    "@typescript-eslint/explicit-function-return-type": ["off", {
      "allowExpressions": true,
      "allowTypedFunctionExpressions": true,
      "allowConciseArrowFunctionExpressionsStartingWithVoid": true,
      "allowedNames": ["componentDidMount", "componentWillUnmount", "render", "Volume", "PlayPause", "Settings", "Player", "TimeDisplay", "ThumbnailBox"]
    }],
    "@typescript-eslint/explicit-module-boundary-types": ["off", {
      "allowTypedFunctionExpressions": true,
      "allowedNames": ["componentDidMount", "componentWillUnmount", "render", "Captions", "Controls", "FullScreen", "IdMap", "PlayPause", "Settings", "Player", "ScrubberBar", "TimeDisplay", "ThumbnailBox", "Volume"]
    }],
    "@typescript-eslint/no-empty-function": "off"
  }
}