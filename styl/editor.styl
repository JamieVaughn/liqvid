.coordinates-box
  background-color #FFC
  color #000
  padding 2px
  position absolute
  left 0
  top 0
  z-index 10000

.editor-controls > *
  display inline-block
  height 100%

.ractive-player.editor > .rp-canvas
  cursor url("/img/cursor.png") 10 10.5, auto

.rp-controls-slidename 
  overflow hidden
  text-align left
  width 10em

.rp-audio-progress, .rp-controls-slidename, .rp-duration
  display inline-block
  font-family "Roboto Slab"
  line-height 36px
  padding 0 4px
  text-align center
  vertical-align top

/* recorder */
#saved-thumbs-dialog, #editor-objects-dialog
  background-color #2A2A2A
  border-radius 2px 2px 0 0
  box-shadow 2px -2px 2px 2px rgba(0, 0, 0, 0.3)
  box-sizing border-box
  
  position absolute
  bottom 42px
  
  padding .5em
  
  > button
    background-color $red
    border 0 none transparent
    box-sizing border-box
    color #FFF
    font-family "Roboto Slab"
    font-size 1em
    padding .25em

#sheets a
  display block

#editor-recorder
  position relative

#editor-recorder-dialog
  background-color #2A2A2A
  border-radius 2px 2px 0 0
  box-shadow 2px -2px 2px 2px rgba(0, 0, 0, 0.3)
  box-sizing border-box
  color #FFF
  font-family "Roboto Slab"
  
  position absolute
  bottom 42px
  right 0
  z-index 3
  
  max-height 40vmin
  overflow-y auto
  padding .5em
  width 42.5vmin
  
  > h3
    color $blue
    margin .5em 0 .2em

#editor-recorder-commands
  th, td
    vertical-align bottom
  
  th
    font-size 1.1em
    
  td
    font-size .9em
    padding-left 1em
  
  kbd
    color yellow

/* configuration */
.recorder-plugin
  display inline-block
  font-family "Helvetica", "Arial", sans-serif
  font-size .7em
  margin 0 .25em
  text-align center
  
.recorder-plugin-icon
  border-radius 5px
  cursor pointer
  display block
  margin-bottom 1px

/* saved recordings */
.recordings
  font-size 1.5em
  list-style-position inside

.recording-results
  border-collapse collapse
  font-size 0.6em
  width 100%
  
  > tbody > tr
    background-color #333
    
    > th
      padding 6px
      width 36px
    
    > td
      padding 6px
    
  textarea
    width 100%

  :link
    background-color $blue
    box-sizing border-box
    color #FFF !important
    display block
    padding .5em
    text-align center
    text-decoration none
    width 100%
